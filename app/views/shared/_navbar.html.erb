<div class="navbar">
  <div class="nav-left">
    <%= link_to raw("<p>AptReviews</p>"), apartments_path %>
    <% unless current_page?(controller: "welcome", action: "index") || current_page?(controller: "apartments", action: "index") %>
      <form class="nav-search" method="GET" action="/apartments/search">
        <input type="text" name="search_input" id="search_input_field" placeholder="Search Address or URL"/>
        <input type="submit" value="Search" />
      </form>
    <% end %>
  </div>

  <div class="nav-right">
    <% if session[:user_id].nil? %>
      <ul>
        <li><%= link_to "Join us!", new_user_path %></li>
        <li><%= link_to "Login", "/login" %></li>
      </ul>
    <% else %>
      <% user = User.find(session[:user_id]) %>
      <%= form_tag session_path, method: "delete" do %>
        <%= submit_tag("Log out, #{ user.username }") %>
      <% end %>
    <% end %>
  </div>
</div>