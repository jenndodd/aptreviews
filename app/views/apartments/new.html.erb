<h1> Add an apartment! </h1>

<% unless @apartment.errors.messages.empty? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <% @apartment.errors.messages.each do |field,error| %>
        <li><em><%= "#{field.capitalize.to_s.gsub("_", " ")} #{error.first}!" %></em></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render "form" %>