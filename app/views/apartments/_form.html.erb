<%= form_for @apartment, :html => { :class => "apartment-form"} do |f| %>

  <div class="label-input">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="label-input">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="label-input">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="label-input">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  
  <div class="label-input">
    <%= f.label :unit %>
    <%= f.text_field :unit %>
  </div>

  <div class="label-input">
    <%= f.label :beds %>
    <%= f.text_field :beds %>
  </div>

  <div class="label-input">
    <%= f.label :baths %>
    <%= f.text_field :baths %>
  </div>

  <div class="label-input">
    <%= f.label :rent %>
    <%= f.text_field :rent %>
  </div>

  <div class="label-input">
    <%= f.label :extras %>
    <%= f.text_area :extras %>
  </div>

  <%= f.submit @apartment.id.nil? ? "Add!" : "Save Changes" %>
<% end %>

<div class="clear"></div>