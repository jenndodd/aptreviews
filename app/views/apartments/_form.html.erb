<%= form_for [@apartment] do |f| %>

  <div class="label-input">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="label-input">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="label-input">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="label-input">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  
  <div class="label-input">
    <%= f.label :unit %>
    <%= f.text_field :unit %>
  </div>

  <%= f.submit @apartment.id.nil? ? "Add!" : "Save Changes" %>
<% end %>