<h2>Update Apartment <%= @apartment.address %>, Apartment <%= @apartment.unit %></h2>

<% unless @update_worked %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <% @apartment.errors.messages.each do |field,error| %>
        <li><em><%= "#{field.capitalize} #{error.first}!" %></em></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render "form" %>

<p><%= link_to "Return to apartment home.", apartment_path(@apartment) %></p>