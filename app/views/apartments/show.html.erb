<h1> <%= @apartment.address %>, Apartment <%= @apartment.unit %></h1>
<p><%= @user.username %></p>
<p><%= link_to "Edit This Apartment", edit_apartment_path(@apartment) %></p>
<%= raw("<p><strong class='success'>#{flash[:success_message]}</strong></p>") unless flash[:success_message].nil? %>

<div class="map_container">
  <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @apartment.address %>&size=400x400&zoom=15&markers=color:red%7Clabel:C%7C<%= @url_address %>&sensor=false" alt="Address on Map">
</div>

<% if logged_in? %>
  <%= link_to "Add a Listing", new_apartment_listing_path(@apartment) %>
  <br/>
<% end %>

<ul>
  <% @listings.each do |listing| %>
    <li><a href=<%= listing.url %> target='_blank'> <%= listing.url %> </a></li>
  <% end %>
</ul>


<% if logged_in? %>
  <%= link_to "Add a Review", new_apartment_review_path(@apartment) %>
  <br/>
<% end %>

<ul>
  <% @reviews.each do |review| %>
    <li>
      <p><%= review.datetime %></p>
      <p><%= review.title %></p>
      <p><%= review.review %></p>
      <p><%= review.rating %></p>
      <p><%= review.user.username %></p>
    </li>
  <% end %>
</ul>