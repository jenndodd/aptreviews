<h1> Add a Review!</h1>
<h2><%= @apartment.address %>, Apartment <%= @apartment.unit %></h2>

<% unless @review.errors.messages.empty? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <% @review.errors.messages.each do |field,error| %>
        <li><em><%= "#{field.capitalize.to_s.gsub("_", " ")} #{error.first}!" %></em></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render "form" %>